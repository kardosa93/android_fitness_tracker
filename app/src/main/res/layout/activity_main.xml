<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageButton
        android:layout_width="600px"
        android:layout_height="300px"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imgBtnWalking"
        android:background="@drawable/walking" />

    <ImageButton
        android:layout_width="600px"
        android:layout_height="300px"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imgBtnRunning"
        android:background="@drawable/running" />

    <ImageButton
        android:layout_width="600px"
        android:layout_height="300px"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imgBtnCycling"
        android:background="@drawable/cycling" />

    <ImageButton
        android:layout_width="400px"
        android:layout_height="100px"
        android:layout_marginTop="15dp"
        android:id="@+id/imgBtnWorkouts"
        android:background="@drawable/workouts"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
